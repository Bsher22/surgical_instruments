# ===========================================
# SurgicalPrep API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----- DATABASE -----
# PostgreSQL connection string (Railway provides this automatically)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/surgicalprep

# ----- AUTHENTICATION -----
# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-at-least-32-chars

# JWT Configuration (optional, defaults shown)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----- CLOUDFLARE R2 STORAGE -----
# From Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=surgicalprep-images
# Public URL for your R2 bucket (custom domain or r2.dev URL)
R2_PUBLIC_URL=https://images.yourdomain.com

# ----- STRIPE -----
# From Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (from Products page)
STRIPE_PRICE_MONTHLY=price_...
STRIPE_PRICE_ANNUAL=price_...

# ----- CORS -----
# Allowed origins (JSON array format)
# Add your mobile app URLs and production domains
CORS_ORIGINS=["http://localhost:8081","http://localhost:19006","https://surgicalprep.pages.dev"]

# ----- FREE TIER LIMITS -----
FREE_TIER_CARDS_LIMIT=5
FREE_TIER_DAILY_QUIZZES=3

# ----- DEBUG -----
# Set to true for development (shows SQL queries, etc.)
DEBUG=false
