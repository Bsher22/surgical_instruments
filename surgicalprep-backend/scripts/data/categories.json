{
  "metadata": {
    "version": "1.0.0",
    "description": "Instrument category definitions with display order and descriptions"
  },
  "categories": [
    {
      "name": "Cutting & Dissecting",
      "order": 1,
      "description": "Instruments used to cut, incise, or dissect tissue including scalpels, scissors, and osteotomes.",
      "examples": ["Scalpel blades", "Mayo scissors", "Metzenbaum scissors", "Iris scissors", "Osteotomes"],
      "icon": "scissors"
    },
    {
      "name": "Clamps & Forceps",
      "order": 2,
      "description": "Locking instruments used to occlude vessels, grasp tissue, or secure structures. Includes hemostats and vascular clamps.",
      "examples": ["Kelly forceps", "Kocher forceps", "Mosquito forceps", "Satinsky clamp", "Bulldog clamp"],
      "icon": "clamp"
    },
    {
      "name": "Grasping & Holding",
      "order": 3,
      "description": "Non-locking thumb forceps and tissue forceps used to hold, manipulate, and stabilize tissue during procedures.",
      "examples": ["Adson forceps", "DeBakey forceps", "Allis forceps", "Babcock forceps", "Russian forceps"],
      "icon": "hand"
    },
    {
      "name": "Retractors",
      "order": 4,
      "description": "Instruments used to hold back tissue and organs to provide surgical exposure. Includes handheld and self-retaining types.",
      "examples": ["Army-Navy", "Richardson", "Deaver", "Balfour", "Weitlaner", "Gelpi"],
      "icon": "expand"
    },
    {
      "name": "Suturing",
      "order": 5,
      "description": "Instruments specifically designed for holding needles and manipulating suture material during wound closure.",
      "examples": ["Mayo-Hegar needle holder", "Crile-Wood needle holder", "Castroviejo needle holder", "Suture scissors"],
      "icon": "needle"
    },
    {
      "name": "Probes & Dilators",
      "order": 6,
      "description": "Instruments used to explore, measure, or dilate body cavities, ducts, and passages.",
      "examples": ["Grooved director", "Hegar dilators", "Van Buren sounds", "Lacrimal probes", "Uterine sound"],
      "icon": "probe"
    },
    {
      "name": "Specialty",
      "order": 7,
      "description": "Procedure-specific instruments and equipment including laparoscopic instruments, suction devices, and drains.",
      "examples": ["Yankauer suction", "Trocars", "Laparoscopic graspers", "Specimen bags", "Foley catheter"],
      "icon": "star"
    },
    {
      "name": "Powered",
      "order": 8,
      "description": "Electrically or pneumatically powered surgical instruments including saws, drills, and energy devices.",
      "examples": ["Bovie", "Harmonic scalpel", "LigaSure", "Sagittal saw", "Surgical drill", "Dermatome"],
      "icon": "bolt"
    }
  ],
